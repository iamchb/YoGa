<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/class_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="18sp"
        tools:text="6:30" />

    <TextView
        android:id="@+id/class_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teacher_name"
        android:layout_alignStart="@+id/teacher_name"
        android:layout_below="@+id/teacher_name"
        android:text="TextView"
        android:layout_marginBottom="10dp"
        tools:text="澳門" />

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_toEndOf="@+id/class_time_flag"
        android:layout_toRightOf="@+id/class_time_flag"
        android:text="TextView"
        tools:text="Marry lei" />

    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/class_time"
        android:layout_alignBottom="@+id/class_time"
        android:layout_alignLeft="@+id/teacher_name"
        android:layout_alignStart="@+id/teacher_name"
        android:text="MySore"
        android:textColor="#000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/search_right_arrow" />

    <TextView
        android:id="@+id/class_time_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/class_time"
        android:layout_alignRight="@+id/class_time"
        android:layout_below="@+id/class_time"
        android:text="TextView"
        tools:text="am" />

    <View
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignBottom="@+id/class_location" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_alignBottom="@+id/empty_view"-->

        <!--android:background="@color/gray" />-->
</RelativeLayout>