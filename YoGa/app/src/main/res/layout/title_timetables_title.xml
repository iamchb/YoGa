<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/status_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/status_view_padding"
        android:orientation="vertical">
        <!--android:background="@drawable/bg_top"-->
        <ImageView
            android:id="@+id/title_main_iv_dimension_code"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/title_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_main_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="YoGa"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="350dp" />
        </LinearLayout>
        <!--android:textColor="@color/dark_gray"-->
        <ImageView
            android:id="@+id/title_main_img_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/title_linearlayout"
            android:padding="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/title_main_img_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>
</RelativeLayout><!--</LinearLayout>-->